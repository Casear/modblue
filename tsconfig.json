{
	"compilerOptions": {
		"moduleResolution": "Node",
		"module": "CommonJS",
		"target": "ES2015",
		"types": ["node"],
		"lib": ["ES2016", "ES2017"],
		"outDir": "lib",
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true
	},
	"include": ["src/**/*"],
	"exclude": ["docs", "lib", "tests", "node_modules"],
	"typedocOptions": {
		"out": "docs",
		"listInvalidSymbolLinks": true,
		"includeVersion": true,
		"entryPoints": ["src/index.ts"],
		"excludeProtected": true,
		"excludePrivate": true
	}
}
