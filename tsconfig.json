{
	"compilerOptions": {
		"moduleResolution": "Node",
		"module": "ES2020",
		"target": "ES2020",
		"outDir": "lib",
		"types": ["node", "web-bluetooth"],
		"noImplicitAny": true,
		"esModuleInterop": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true
	},
	"include": ["src/**/*"],
	"typedocOptions": {
		"out": "docs",
		"listInvalidSymbolLinks": true,
		"includeVersion": true,
		"entryPoints": ["src/index.ts"],
		"excludeProtected": true,
		"excludePrivate": true
	}
}
